<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">


    <appender name="userAppend" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>D:/log/userlog-%d{yyyy-MM-dd-HH}_%i.log</FileNamePattern>
            <MaxHistory>15</MaxHistory>
            <maxFileSize>1KB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd-HH:mm:ss,SSS}[%thread] %-5level %c - %msg%n</pattern>
        </encoder>
    </appender>


    <root level="error">
        <appender-ref ref="userAppend"/>
    </root>
    <logger name="com.wnn.mymusiclog.service.SongPlayService" additivity="false">
        <level value="info"/>
        <appender-ref ref="userAppend"/>
    </logger>


</configuration>